{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Scrappy": "Debug"
    }
  },
  "ConnectionStrings": {
    "SQLite": "Data source=scrappy.db"
  },
  "Threads": 1,
  "OutputDirectoryPath": "C:\\Scrappy\\Output",
  "EndPause": 15,
  "AppendBufferSize": 1048576,
  "MaxFileSize": 1073741824,
  "Prometheus": {
    "Enabled": true,
    "Port": 9090
  },
  "LogsPath": "logs",
  "CycleTimeout": 30
}
